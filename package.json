{
  "name": "html5-playable-bot-grammy",
  "version": "3.0.1",
  "description": "Telegram bot for generating Playable Ads (GrammY + Prisma ORM)",
  "type": "module",
  "main": "bot_py/main.py",
  "scripts": {
    "start": "uv run python -m bot_py.main",
    "start:src": "uv run python -m bot_py.main",
    "start:ts": "node dist/bot.js",
    "start:ts:src": "node --loader ts-node/esm --experimental-specifier-resolution=node src/bot.ts",
    "build": "tsc -p tsconfig.json",
    "build:all": "npm run build && npm --prefix admin run build",
    "test": "vitest run",
    "py:sync": "uv sync",
    "py:test": "uv run pytest -q",
    "py:lint": "uvx ruff check bot_py tests_py",
    "py:type": "uvx ty check bot_py",
    "db:push": "prisma db push",
    "postinstall": "prisma generate",
    "dev:bot": "uv run python -m bot_py.main",
    "dev:bot:ts": "nodemon --watch src --ext ts,json --exec \"node --loader ts-node/esm --experimental-specifier-resolution=node\" src/bot.ts",
    "dev:admin": "npm --prefix admin run dev",
    "dev": "concurrently -k -n bot,admin -c cyan,magenta \"npm run dev:bot\" \"npm run dev:admin\"",
    "pm2:up": "pm2 start ecosystem.config.cjs --update-env",
    "pm2:restart": "pm2 restart ecosystem.config.cjs --update-env",
    "pm2:down": "pm2 delete playable-bot playable-admin",
    "pm2:logs": "pm2 logs playable-bot playable-admin",
    "docker:up": "docker compose up -d --build",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f playable-bot playable-admin",
    "docker:dev": "docker compose -f docker-compose.dev.yml up -d --build",
    "docker:dev:up": "docker compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker compose -f docker-compose.dev.yml logs -f playable-bot playable-admin"
  },
  "dependencies": {
    "@grammyjs/conversations": "^2.1.1",
    "@grammyjs/storage-file": "^2.5.1",
    "@prisma/client": "^6.19.2",
    "basic-auth": "^2.0.1",
    "debug": "^4.4.3",
    "docker-compose": "^1.3.1",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "fs-extra": "^11.3.0",
    "grammy": "^1.39.3"
  },
  "devDependencies": {
    "@bytehide/shield-cli": "^1.0.5",
    "@types/basic-auth": "^1.1.3",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.13.1",
    "concurrently": "^9.2.1",
    "javascript-obfuscator": "^4.1.1",
    "nodemon": "^3.1.11",
    "prisma": "^6.19.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.9"
  }
}
